<section>
  <div class="container">
    <div class="row pl-5">
      <div class="col-lg-12 bg-light">
        <h2 class="text-center">PROFILE</h2>
        

        {{#each details}}
        <form action="/teacher/teacher_editprofile/{{this._id}}" method="post" enctype="multipart/form-data">

         <div id="right-side">
              <label for="">Profile Photo</label>
              <img src="/profile_image/{{this._id}}.jpg" id="profilepic">
               <input type="file" class="form-control" name="image" onchange="viewImage(event)">
        </div>
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" value="{{this.name}}">


            <label for="">Job</label>
            <input type="text" class="form-control" name="job" value="{{this.job}}">


            <label for="">Class</label>
            <input type="text" class="form-control" name="class" value="{{this.class}}">

            <label for="">Address</label>
            <input type="text" class="form-control" name="address" value="{{this.address}}">

            <label for="">Mobile</label>
            <input type="text" class="form-control" name="mobile" value="{{this.mobile}}">

            <label for="">Email</label>
            <input type="email" class="form-control" name="email" value="{{this.email}}">

            <button type="submit" class="btn btn-success mt-4">Update Profile</button>
          </div>
        </form>
        {{/each}}

      </div>
    </div>
  </div>
</section>
<script>
    function viewImage(event){
        document.getElementById('profilepic').src=URL.createObjectURL(event.target.files[0])
    }
</script>