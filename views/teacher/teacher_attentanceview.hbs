<section>

  <div class="container-flex mt-5 pt-2 content">
    <div class="row pl-2 ">
      <div class="col-lg-12 col-md-6 col-xs-4">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th>Attentance</th>
              <th><input type="date" id="date" value="" min="2020-01-01" max="2030-12-31"></th>
              <th><button type="button" onclick="absentees()">Attentance List</button></th>
            </tr>
          </thead>
          <tr>
            <th>Roll No </th>

            <th>Name</th>
            <th>Attentance</th>
          </tr>
          </thead>
          <tbody id="tBody"></tbody>
        </table>
      </div>
    </div>
  </div>
</section>
<script>


  function absentees() {

    var select_date = $("#date").val();
    console.log(select_date);
    console.log("ajax call")
    $.ajax({
      url: '/absent-students',
      data: {
        date: select_date
      },
      method: 'post',
      success: function (resp) {
        console.log("ajax success")

        console.log(resp)
        $('#tBody').empty()
        display(resp)
      }
    })
  };
  function display(resp) {
    var trHTML = '';
    $.each(resp, function (i, students) {
      for (i = 0; i < resp.students.length; i++) {
        trHTML +=
          '<tr><td>'
          + resp.students[i].rollno
          + '</td><td>'
          + resp.students[i].name
          + '</td><td>'
          + resp.students[i].status
          + '</td></tr>';
      }
    });
    $('#tBody').append(trHTML);
  }



</script>