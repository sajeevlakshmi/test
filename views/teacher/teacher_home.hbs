<div class="container-fluid mt-5 pt-2 content">
  <div class="row pl-1 ">
    <div class="col-lg-12 col-md-6 col-xs-4 ">
      <div id="carouselExampleControls" class="carousel slide " data-ride="carousel" >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="images/image7.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="images/image5.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="images/image6.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev " href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <div class="row ml-1">
    <div class=" col-md-6 col-xs-4 bgColor  ">
      <h4 style="color:black">Anouncements</h4><br>

      <ul class=" ">
        {{#each anouncements}}
        <li class=""><a href="/anouncements-details/{{this._id}}">{{this.message}}</li><br>
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6 bgColor   ">

       <h4 style="color:black">Event</h4><br>
      <ul>
        {{#each events}}
        <li><a href="/teacher_eventsView/{{this._id}}">{{this.event}}</li><br>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
</section>