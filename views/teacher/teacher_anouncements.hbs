<section>
    <div class="container-flex mt-5 pt-2 content">
        <div class="row pl-3 ">
            <div class="col-lg-12 col-md-6 col-xs-4 ">
                <h2 class="text-center"> Anouncements</h2>

                <form action="/teacher_anouncements" method="post" enctype="multipart/form-data">
                    <div class="form-group  ">
                        <label for="usr">Message:</label>
                        <input type="text" class="form-control border border-secondary" id="usr" name="message">
                    </div>
                    <div class="form-group ">
                        <label for="comment">Description:</label><br>
                        <textarea class="form-control border border-secondary" rows="5" id="comment"
                            name="description"></textarea>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>

                                <th scope="col">PDF</th>
                                <th scope="col">Image</th>
                                <th scope="col">Video</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="card" style="width: 15rem;height:11rem">
                                        <iframe id="viewer" src="" frameborder="0" allowfullscreen=""></iframe>
                                        <input type="file" accept=".pdf" id="pdf" class="form-control float-left "
                                            name="document" onchange="viewPdf(event)">

                                    </div>
                                </td>
                                <td>
                                    <div class="card" style="width: 15rem;">

                                        <img src="" id="imageFile">
                                        <div class="card-body">
                                            <input type="file" accept=".jpg" id="image" class="form-control float-left"
                                                name="image" onchange="viewImage(event)">

                                        </div>
                                    </div>

                                </td>
                                <td>
                                    <div class="card" style="width: 15rem;">
                                        <video controls loop width="200px" height="125px" id="videopic">
                                            <source src="">
                                        </video>
                                        <div class="card-body">
                                            <input type="file" accept=".mp4" acceid="video"
                                                class="form-control float-left" name="video"
                                                onchange="viewVideo(event)">
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        </tbody>
                    </table>

                    <button type="submit" class="btn btn-success mt-4" onclick="move()">Save</button>
                </form>
            </div>

        </div>
    </div>
</section>
<script>
    function viewImage(event) {
        document.getElementById('imageFile').src = URL.createObjectURL(event.target.files[0])
    }
    function viewVideo(event) {


        const video = document.getElementById('videopic');
        const obj_url = URL.createObjectURL(event.target.files[0]);
        video.src = obj_url;
        video.play();

    }
    function viewPdf(event) {
        const obj_url = URL.createObjectURL(event.target.files[0]);
        const iframe = document.getElementById('viewer');
        iframe.setAttribute('src', obj_url);

    }

</script>