<section>
  <div class="row ">
        <div class="col-md-2" style="width: 200px;"></div>
        <div class=" col-md-10 " style="padding-left: 99px;">
                 <h2 class="text-center"> Events</h2>
                 <a href="/student/event_register/{{details._id}}" class="btn btn-primary float-right">Register for the Event</a>
                <table class="table mt-5 ">
                    <tr>
                        <th>Event</th>
                        <th>Topic</th>
                        <th>conduct By</th>
                        <th>Fees</th>
                    </tr>
                    <tr>
                        <td>{{details.event}}</td>
                        <td>{{details.topic}}</td>
                        <td>{{details.conduct}}</td>
                        {{#if details.fees}}
                        <td>Rs:{{details.fees}}</td>
                        {{else}}
                        <td> No Payment</td>
                        {{/if}}

                    </tr>
                </table>           
               
            </div>
        </div>
    
    
       <div class="row ">
        <div class="col-md-2" style="width: 200px;"></div>
        <div class=" col-md-4" style="padding-left: 99px;">
            {{#if details.ImgName}}
            <img style="width: 25rem;height:18rem" src="/eventImages/{{details._id}}.jpg" id="imageFile">
            {{/if}}
        </div>
                 
      
            <div class=" col-md-4" style="padding-left: 99px;">
                    {{#if details.docName}}
                     
                            <div class="border border-secondary embed-responsive embed-responsive-4by3 ml-1" style="width:25rem;height:18rem;">
                    <iframe class="embed-responsive-item" src="/eventPdf/{{details._id}}.pdf"></iframe>
                </div>
                   
                    {{/if}}
                </div>
       </div>
            
    
        <div class="row ">
        <div class="col-md-2" style="width: 200px;"></div>
        <div class=" col-md-4" style="padding-left: 99px;">
            {{#if details.filename}}
                        <div class="mt-3 embed-responsive embed-responsive-4by3 ml-1" style="width:25rem;height:18rem;">
                    <iframe class="embed-responsive-item" src="/eventVideos/{{details._id}}.mp4"></iframe>
                </div>
            {{/if}}

        </div> 
</div>
</section>