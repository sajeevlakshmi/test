<section>
    <div class="container-flex mt-5 pt-2 content">
        <div class="row  ">
            <div class="col-lg-12 col-md-6 col-xs-4">
                <h3 class="text-center"> School Photos</h3>

                {{#each photos}}
                <div class="col-lg-4  mt-4 float-left">

                    <div class="card " style="width: 18rem;">

                        <img class="card-img-top" src="/photos/{{this._id}}.png" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">{{photos.filename}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
</section>