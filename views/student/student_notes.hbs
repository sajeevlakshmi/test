<section>
    <div class="row ">
                <div class="col-md-2" style="width: 200px;"></div>
                <div class=" col-md-10 " style="padding-left: 99px;">
                <h2 class="text-center">Notes</h2>

                <div>

                    <table class="table table-bordered mt-5" id="table_id">
                        <thead>
                            <tr>
                                <th scope="col">Topic </th>
                               {{!-- <th scope="col">Date</th>--}}
                                <th scope="col">video</th>
                                <th scope="col">File</th>
                               

                            </tr>
                        </thead>
                        <tbody>
                            {{#each notes}}
                            <tr>

                                <td>{{this.name}}</td>
                                {{!-- <td>{{this.date}}</td> --}}
                                <td>

                                    <video id="video" controls onplay="playVid()" width="100px" height="100px"
                                        src="/video/{{this._id}}{{this.filename}}.mp4" frameborder="0"
                                        allowtransparency="true" allowfullscreen><video>
                                </td>

                                <td><a
                                        href="/teacher/notes/{{this._id}}/{{this.documentname}}">{{this.documentname}}</a>
                                </td>

                               

                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
</div>

            </div>
   
</section>
<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>
