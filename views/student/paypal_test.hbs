                   <input type="text" class="form-control" id="name" name="name" value="{{student.name}}"><br>
                    <label>Amount:</label>
                    <input type="number" class="form-control" id="fees" name="fees" value="{{details.fees}}"><br>
                     <label>Email:</label>
                     <input type="text" class="form-control" id="email" name="email" value="{{student.email}}"><br>
                      <label>Mobile No:</label>
                      <input type="text" class="form-control" id="phone" name="phone" value="{{student.mobile}}"><br>
                       <label>Event Name:</label>
                       <input type="text" class="form-control" id="phone" name="event" value="{{details.event}}"><br>
                   <button type="submit" value="" class=" mt -2  btn btn-primary float-center">proceed<br>
                            </button>
                  </form>   