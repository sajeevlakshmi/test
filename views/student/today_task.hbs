<section>
    <div class="container-flex mt-5 pt-2 content">
        <div class="row pl-1 ">
            <div class="col-lg-12 col-md-6 col-xs-4 ">
                <h2 class="text-center">Today's Task</h2>

                <div>

                    <table class="table mt-5">
                        <thead>
                            <tr class="bg-secondary">
                                <th scope="col">Topic </th>

                                <th scope="col">File</th>
                                <th scope="col">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each assignments}}
                            <tr>

                                <td>{{this.name}}</td>

                                <td><a
                                        href="/teacher/assignments/{{this._id}}/{{this.filename}}">{{this.filename}}.pdf</a>
                                </td>
                                <td>
                                    <a href="/teacher/assignments/{{this._id}}/{{this.filename}}"
                                        class="btn btn-success">Open</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>



            </div>
        </div>
    </div>
</section>